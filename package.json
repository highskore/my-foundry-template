{
  "name": "@highskore/my-foundry-template",
  "description": "",
  "version": "1.0.0",
  "author": {
    "name": "highskore",
    "url": "https://github.com/highskore"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "solady": "^0.0.232"
  },
  "devDependencies": {
    "forge-std": "github:foundry-rs/forge-std#v1.8.1",
    "prettier": "^3.0.0",
    "solhint": "^3.6.2",
    "husky": "^9.1.4",
    "codecov": "^3.8.3"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out coverage.json",
    "build": "forge build",
    "lint": "bun run lint:sol && bun run prettier:check",
    "lint:sol": "forge fmt --check && bun solhint {script,src,test}/**/*.sol",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
    "prepare": "husky",
    "clean:forge": "forge clean",
    "test:gas": "forge test --gas-report",
    "gas-report": "node scripts/foundry/generateGasReport.js",
    "coverage": "forge coverage --ir-minimum",
    "coverage:report": "scripts/foundry/generate_coverage_report.sh",
    "deploy:forge": "forge script scripts/solidity/Deploy.s.sol --broadcast --rpc-url http://localhost:8545",
    "lint:fix": "bun prettier --write 'contracts/**/*.sol' && bun solhint 'contracts/**/*.sol' --fix --noPrompt",
    "check-branch-name": "node scripts/git-hooks/checkBranchNames.js",
    "generate-and-push-gas-report": "bun run gas-report && git add gas_report.md && git commit -m 'Update gas report' || echo 'No changes to gas report'"
  },
  "husky": {
    "hooks": {
      "pre-push": "bun run check-branch-name && bun run lint:fix && bun run generate-and-push-gas-report",
      "post-checkout": "bun run check-branch-name && bun install && forge install"
    }
  }
}
